%h5= @date
.row
  .col-md-6
    .panel.panel-success
      .panel-heading 割り当て未済
      %table.table
        %thead
          %tr
            %th 名前
            %th 部署
            %th コントローラ
            %th 専用区画
            %th ブロック
            %th
        %tbody
          - @waiting_requests.each do |request|
            %tr
              %td= request.name
              %td= request.department
              %td= request.controller
              %td= request.division
              %td= request.block
              %td
                = link_to '編集', edit_request_path(request.id), class: 'btn btn-primary btn-xs'
  .col-md-6
    .panel.panel-default
      .panel-heading 割り当て済
      %table.table
        %thead
          %tr
            %th 名前
            %th 部署
            %th コントローラ
            %th 専用区画
            %th ブロック
        %tbody
          - @approved_requests.each do |request|
            %tr
              %td= request.name
              %td= request.department
              %td= request.controller
              %td= request.division
              %td= request.block
